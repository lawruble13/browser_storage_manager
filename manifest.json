{
    "manifest_version": 2,
    "name": "Browser Storage Manager",
    "version": "0.1",

    "description": "Adds buttons to export/import your browser storage from/to a file.",
    "homepage_url": "https://github.com/lawruble13/browser_storage_manager",
    "icons": {
        "48": "icons/browser_export_48.png",
        "96": "icons/browser_export_96.png"
    },
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "browser_action": {
        "default_icon": "icons/browser_export.png",
        "default_title": "Manage Browser Storage",
        "default_popup": "popup/choose_action.html"
    },
    "background": {
        "scripts": ["background_scripts/background.js"],
        "persistent": false
    }
}
